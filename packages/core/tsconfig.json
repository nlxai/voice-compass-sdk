{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "lib": ["dom", "es2015"],
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
