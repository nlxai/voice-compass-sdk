{
  "name": "Point and Click-y thing",
  "description": "Test version",
  "version": "0.0.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "action": {
    "default_title": "point-an'-click",
    "default_icon": "favicon.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js":         [ "content/index.js" ],
      "css":        [ "content/index.css" ],
      "matches":    [ "<all_urls>" ],
      "all_frames": true,
      "run_at":     "document_end"
    }
  ]
}